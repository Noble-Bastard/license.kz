# Laravel Application
APP_NAME=UPPERLICENSE
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000

# Настройки логирования
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# База данных (внешняя)
# Для MySQL/MariaDB
DB_CONNECTION=mysql
DB_HOST=your-external-db-host.com
DB_PORT=3306
DB_DATABASE=license_kz
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Для PostgreSQL (альтернатива)
# DB_CONNECTION=pgsql
# DB_HOST=your-postgres-host.com
# DB_PORT=5432
# DB_DATABASE=license_kz
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_db_password

# Кеширование
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis (для кеша и сессий)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Настройки почты
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@license.kz
MAIL_FROM_NAME="${APP_NAME}"

# AWS (если используется)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (если используется)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Дополнительные настройки для Docker
RUN_MIGRATIONS=false

# Настройки локализации
APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU

# Настройки файлов
UPLOAD_MAX_SIZE=10240
MAX_FILE_UPLOADS=20
